{
  "manifest_version": 3,
  "name": "Carbonara",
  "version": "1.0",
  "permissions": [
    "storage",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "*://*/*"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "main.js",
        "ui/chart.js",
        "ui/chartjs-adapter-date-fns.bundle.min.js",
        "ui/main.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "ui/index.html"
  },
  "background": {
    "service_worker": "service.js"
  }
}